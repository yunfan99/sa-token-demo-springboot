<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.satokendemospringboot.mapper.PermissionsMapper">

    <resultMap id="BaseResultMap" type="com.example.satokendemospringboot.entity.Permissions">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="code" column="code" jdbcType="VARCHAR"/>
            <result property="path" column="path" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,code,path
    </sql>

    <select id="getPerms" resultType="java.lang.String">
        SELECT
            p.`code`
        FROM
            tb_user u
                LEFT JOIN tb_user_permissions up ON up.user_id = u.id
                LEFT JOIN tb_permissions p ON p.id = up.permission_id
        WHERE
            u.id = #{userId};
    </select>
</mapper>
